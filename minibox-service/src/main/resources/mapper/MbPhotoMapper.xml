<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghw.minibox.mapper.MbPhotoMapper">

    <resultMap type="com.ghw.minibox.entity.MbPhoto" id="MbPhotoMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="photoLink" column="photoLink" jdbcType="VARCHAR"/>
        <result property="gid" column="gid" jdbcType="OTHER"/>
        <result property="state" column="state" jdbcType="OTHER"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="updateDate" column="update_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MbPhotoMap">
        SELECT id,photoLink,gid,state,create_date,update_date
        FROM mb_photo
        <where>
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="gid!=null">
                AND gid = #{gid}
            </if>
        </where>
    </select>

    <select id="queryInId" resultMap="MbPhotoMap">
        SELECT p.id,photoLink, gid, state, create_date, update_date
        FROM mb_photo AS p
        WHERE p.id IN
        <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MbPhotoMap">
        SELECT id, photoLink, gid, state, create_date, update_date
        FROM mb_photo
        LIMIT #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MbPhotoMap">
        SELECT id, photoLink, gid, state, create_date, update_date
        FROM mb_photo
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="photoLink != null and photoLink != ''">
                AND photoLink = #{photoLink}
            </if>
            <if test="gid != null">
                AND gid = #{gid}
            </if>
            <if test="state != null">
                AND state = #{state}
            </if>
            <if test="createDate != null">
                AND create_date = #{createDate}
            </if>
            <if test="updateDate != null">
                AND update_date = #{updateDate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into minibox.mb_photo(photoLink, gid)
        values (#{photoLink}, #{gid})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into minibox.mb_photo( photoLink, gid)
        values
        <foreach collection="entities" item="entity" separator=",">
            ( #{entity.photoLink},#{entity.gid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into minibox.mb_photo( photoLink, gid, state, create_date, update_date)
        values
        <foreach collection="entities" item="entity" separator=",">
            #{entity.photoLink}, #{entity.gid}, #{entity.state}, #{entity.createDate}, #{entity.updateDate})
        </foreach>
        on duplicate key update
        photoLink = values(photoLink) , gid = values(gid) , state = values(state) , create_date =
        values(create_date) , update_date = values(update_date)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update minibox.mb_photo
        <set>
            <if test="photoLink != null and photoLink != ''">
                photoLink = #{photoLink},
            </if>
            <if test="gid != null">
                gid = #{gid},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from minibox.mb_photo
        where id = #{id}
    </delete>

</mapper>