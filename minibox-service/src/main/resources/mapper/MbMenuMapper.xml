<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ghw.minibox.mapper.MbMenuMapper">
    <resultMap id="menuMap" type="com.ghw.minibox.entity.MbMenu">
        <id property="id" column="id"/>
        <result property="menuName" column="menu_name"/>
        <result property="menuIcon" column="menu_icon"/>
        <result property="menuUrl" column="menu_url"/>
    </resultMap>

    <select id="queryAll" resultMap="menuMap">
        SELECT m.id,
        m.menu_name,
        m.menu_icon,
        m.menu_url
        FROM mb_menu AS m
        <where>
            <if test="id != null">
                and m.id =#{id}
            </if>
            <if test="menuName != null and menuName != '' ">
                and m.menu_name LIKE CONCAT('%',#{menuName},'%')
            </if>
            <if test="menuUrl != null and menuUrl != '' ">
                and m.menu_url = #{menuUrl}
            </if>
        </where>
        ORDER BY m.id;
    </select>

    <insert id="saveMenu" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO mb_menu(menu_name, menu_icon, menu_url)
        VALUES (#{menuName}, #{menuIcon}, #{menuUrl})
    </insert>

    <update id="updateMenu" useGeneratedKeys="true">
        UPDATE mb_menu
        <set>
            <if test="menuName != null and menuName != '' ">
                menu_name = #{menuName},
            </if>
            <if test="menuIcon != null and menuIcon != '' ">
                menu_icon = #{menuIcon},
            </if>
            <if test="menuUrl != null and menuUrl != '' ">
                menu_url = #{menuUrl},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteMenu">
        DELETE
        FROM mb_menu
        WHERE id = #{id}
    </delete>


</mapper>