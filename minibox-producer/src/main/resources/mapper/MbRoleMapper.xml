<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghw.minibox.mapper.MbRoleMapper">

    <resultMap type="com.ghw.minibox.entity.MbRole" id="MbRoleMap">
        <result property="rid" column="rid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MbRoleMap">
        select rid,
               name,
               state
        from mini_box.mb_role
        where rid = #{rid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MbRoleMap">
        select rid,
               name,
               state
        from mini_box.mb_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MbRoleMap">
        select
        rid, name, state
        from mini_box.mb_role
        <where>
            <if test="rid != null">
                and rid = #{rid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="rid" useGeneratedKeys="true">
        insert into mini_box.mb_role(name, state)
        values (#{name}, #{state})
    </insert>

    <insert id="insertBatch" keyProperty="rid" useGeneratedKeys="true">
        insert into mini_box.mb_role(name, state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.state})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="rid" useGeneratedKeys="true">
        insert into mini_box.mb_role(name, state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.state})
        </foreach>
        on duplicate key update
        name = values(name) , state = values(state)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mini_box.mb_role
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where rid = #{rid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from mini_box.mb_role
        where rid = #{rid}
    </delete>

</mapper>