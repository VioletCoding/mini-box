<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghw.minibox.mapper.MbBlockMapper">

    <resultMap type="com.ghw.minibox.entity.MbBlock" id="MbBlockMap">
        <result property="bid" column="bid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="gid" column="gid" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MbBlockMap">
        select bid,
               name,
               gid,
               state
        from mini_box.mb_block
        where bid = #{bid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MbBlockMap">
        select bid,
               name,
               gid,
               state
        from mini_box.mb_block
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MbBlockMap">
        select
        bid, name, gid, state
        from mini_box.mb_block
        <where>
            <if test="bid != null">
                and bid = #{bid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="gid != null">
                and gid = #{gid}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="bid" useGeneratedKeys="true">
        insert into mini_box.mb_block(name, gid, state)
        values (#{name}, #{gid}, #{state})
    </insert>

    <insert id="insertBatch" keyProperty="bid" useGeneratedKeys="true">
        insert into mini_box.mb_block(name, gid, state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.gid}, #{entity.state})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="bid" useGeneratedKeys="true">
        insert into mini_box.mb_block(name, gid, state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.gid}, #{entity.state})
        </foreach>
        on duplicate key update
        name = values(name) , gid = values(gid) , state = values(state)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mini_box.mb_block
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="gid != null">
                gid = #{gid},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where bid = #{bid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from mini_box.mb_block
        where bid = #{bid}
    </delete>

</mapper>