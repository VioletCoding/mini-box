<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghw.minibox.mapper.MbTagMapper">

    <resultMap type="com.ghw.minibox.entity.MbTag" id="MbTagMap">
        <result property="tid" column="tid" jdbcType="INTEGER"/>
        <result property="tagName" column="tag_name" jdbcType="VARCHAR"/>
        <result property="gid" column="gid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MbTagMap">
        select tid,
               tag_name,
               gid
        from mini_box.mb_tag
        where tid = #{tid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MbTagMap">
        select tid,
               tag_name,
               gid
        from mini_box.mb_tag
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MbTagMap">
        select
        tid, tag_name, gid
        from mini_box.mb_tag
        <where>
            <if test="tid != null">
                and tid = #{tid}
            </if>
            <if test="tagName != null and tagName != ''">
                and tag_name = #{tagName}
            </if>
            <if test="gid != null">
                and gid = #{gid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="tid" useGeneratedKeys="true">
        insert into mini_box.mb_tag(tag_name, gid)
        values (#{tagName}, #{gid})
    </insert>

    <insert id="insertBatch" keyProperty="tid" useGeneratedKeys="true">
        insert into mini_box.mb_tag(tag_name, gid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tagName}, #{entity.gid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="tid" useGeneratedKeys="true">
        insert into mini_box.mb_tag(tag_name, gid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tagName}, #{entity.gid})
        </foreach>
        on duplicate key update
        tag_name = values(tag_name) , gid = values(gid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mini_box.mb_tag
        <set>
            <if test="tagName != null and tagName != ''">
                tag_name = #{tagName},
            </if>
            <if test="gid != null">
                gid = #{gid},
            </if>
        </set>
        where tid = #{tid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from mini_box.mb_tag
        where tid = #{tid}
    </delete>

</mapper>